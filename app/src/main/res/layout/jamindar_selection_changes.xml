<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <!-- Heading "Maximum Loan" -->
    <TextView
        android:id="@+id/text_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request Loan"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Enter Account Number -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutAccountNumber"
        android:layout_width="0dp"
        style="@style/HintStyle"
        android:layout_height="wrap_content"
        android:hint="Account Number1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:hintTextColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/text_header"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        app:layout_constraintWidth_percent="0.96">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextAccountNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:textColor="@color/black"
            android:backgroundTint="@android:color/black"/>

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Nominee Name -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutNomineeName"
        android:layout_width="0dp"
        style="@style/HintStyle"
        android:layout_height="wrap_content"
        android:hint="Nominee Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:hintTextColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/textInputLayoutAccountNumber"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        app:layout_constraintWidth_percent="0.96">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextNomineeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:textColor="@color/black"
            android:backgroundTint="@android:color/black"/>

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Enter Account Number 2 -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutAccountNumber2"
        android:layout_width="0dp"
        style="@style/HintStyle"
        android:layout_height="wrap_content"
        android:hint="Account Number2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:hintTextColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/textInputLayoutNomineeName"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        app:layout_constraintWidth_percent="0.96">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextAccountNumber2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:textColor="@color/black"
            android:backgroundTint="@android:color/black"/>

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Nominee Name 2 -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutNomineeName2"
        android:layout_width="0dp"
        style="@style/HintStyle"
        android:layout_height="wrap_content"
        android:hint="Nominee Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:hintTextColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/textInputLayoutAccountNumber2"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        app:layout_constraintWidth_percent="0.96">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextNomineeName2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:textColor="@color/black"
            android:backgroundTint="@android:color/black"/>

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Submit Button -->
    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="370dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_background_button"
        android:text="Submit"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutNomineeName2"
        app:layout_constraintWidth_percent="0.9" />

</androidx.constraintlayout.widget.ConstraintLayout>
