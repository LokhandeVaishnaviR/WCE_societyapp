<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AdminOperations">

    <!-- Admin Heading -->
    <TextView
        android:id="@+id/user_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USER"
        android:textSize="36sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"/>



    <!-- Box 1: ALL Users -->
    <FrameLayout
        android:id="@+id/request_loan"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#1976D2"
        app:layout_constraintTop_toBottomOf="@id/user_heading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/loan_history"
        app:layout_constraintBottom_toTopOf="@id/max_loan"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request Loan"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"/>

    </FrameLayout>

    <!-- Box 2: Update Data -->
    <FrameLayout
        android:id="@+id/loan_history"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#1976D2"
        app:layout_constraintTop_toTopOf="@id/request_loan"
        app:layout_constraintStart_toEndOf="@+id/request_loan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/request_loan"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loan History"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"/>

    </FrameLayout>

    <!-- Box 3: Add User -->
    <FrameLayout
        android:id="@+id/max_loan"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#1976D2"
        app:layout_constraintTop_toBottomOf="@id/request_loan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/loan_details"
        app:layout_constraintBottom_toTopOf="@id/Deduction_details"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max Loan"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"/>

    </FrameLayout>

    <!-- Box 4: Active Loan Users -->
    <FrameLayout
        android:id="@+id/loan_details"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#1976D2"
        app:layout_constraintTop_toTopOf="@id/max_loan"
        app:layout_constraintStart_toEndOf="@+id/max_loan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/max_loan"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loan Details"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"/>

    </FrameLayout>

    <!-- Box 5: Society Fund -->
    <FrameLayout
        android:id="@+id/Deduction_details"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#1976D2"
        app:layout_constraintTop_toBottomOf="@id/max_loan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/surety"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deduction Details"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"/>

    </FrameLayout>

    <!-- Box 6: Taskbar -->
    <FrameLayout
        android:id="@+id/surety"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#1976D2"
        app:layout_constraintTop_toTopOf="@id/Deduction_details"
        app:layout_constraintStart_toEndOf="@+id/Deduction_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/Deduction_details"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surety"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
