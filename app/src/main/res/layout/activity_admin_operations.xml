<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AdminOperations">

    <!-- Admin Heading -->
    <TextView
        android:id="@+id/admin_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADMIN"
        android:textSize="36sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"/>



    <!-- Box 1: ALL Users -->
    <FrameLayout
        android:id="@+id/all_users"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#1976D2"
        app:layout_constraintTop_toBottomOf="@id/admin_heading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/update_data"
        app:layout_constraintBottom_toTopOf="@id/add_user"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ALL Users"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"/>

    </FrameLayout>

    <!-- Box 2: Update Data -->
    <FrameLayout
        android:id="@+id/update_data"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#1976D2"
        app:layout_constraintTop_toTopOf="@id/all_users"
        app:layout_constraintStart_toEndOf="@+id/all_users"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/all_users"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Data"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"/>

    </FrameLayout>

    <!-- Box 3: Add User -->
    <FrameLayout
        android:id="@+id/add_user"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#1976D2"
        app:layout_constraintTop_toBottomOf="@id/all_users"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/active_loan_users"
        app:layout_constraintBottom_toTopOf="@id/society_fund"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add User"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"/>

    </FrameLayout>

    <!-- Box 4: Active Loan Users -->
    <FrameLayout
        android:id="@+id/active_loan_users"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#1976D2"
        app:layout_constraintTop_toTopOf="@id/add_user"
        app:layout_constraintStart_toEndOf="@+id/add_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/add_user"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active Loan Users"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"/>

    </FrameLayout>

    <!-- Box 5: Society Fund -->
    <FrameLayout
        android:id="@+id/society_fund"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#1976D2"
        app:layout_constraintTop_toBottomOf="@id/add_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/taskbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Society Fund"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"/>

    </FrameLayout>

    <!-- Box 6: Taskbar -->
    <FrameLayout
        android:id="@+id/taskbar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#1976D2"
        app:layout_constraintTop_toTopOf="@id/society_fund"
        app:layout_constraintStart_toEndOf="@+id/society_fund"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/society_fund"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TaskBar"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
